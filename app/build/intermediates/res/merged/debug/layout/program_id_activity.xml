<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/program_tag_scroller"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rt0005_histo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:text="@string/program_id_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/program_tag_selected_id_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/table_margin"
            android:gravity="center" >

            <TextView
                android:id="@+id/program_tag_selected_tag_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/program_tag_selected_tag_label"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/statistic_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="monospace" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/program_tag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/default_border"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/program_tag_epc_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:gravity="center" >

                <EditText
                    android:id="@+id/program_tag_id_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="text"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>

                <CheckBox
                    android:id="@+id/program_tag_ascii_input_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/program_tag_ascii_input_checkbox" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/program_tag_command_layout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_weight="1"
                android:gravity="center" >

                <CheckBox
                    android:id="@+id/program_tag_force_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/program_tag_force_id" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/table_margin"
                    android:text="@string/program_tag_password_label"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/program_tag_pwd_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="text" />
            </LinearLayout>

            <Button
                android:id="@+id/program_tag_button"
                style="@style/inventory_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="ProgramID"
                android:text="@string/program_id_button" />
        </LinearLayout>

        <TextView
            android:id="@+id/rt0005_main_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:background="@drawable/default_border"
            android:gravity="center"
            android:text="@string/program_id_note" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:background="@drawable/default_border"
            android:gravity="center"
            android:text="@string/program_tag_password_note" />

    </LinearLayout>

</ScrollView>